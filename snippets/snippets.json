{
    "Create a new Tests suit" : {
      "prefix": "tests:",
      "body": [
        "tests:",
        "  - name: ${1:Tests}",
        "    describes:",
        "      - name: ${2:Describe}",
        "        its:",
        "          - name: ${3:Should do something}",
        "            actions:",
        "              - extrinsics:",
        "                - chain: ${4:*your_chain}",
        "                  signer: ${5:*signer}",
        "                  pallet: ${6:palletName}",
        "                  call: ${7:callName}",
        "                  args: []",
        "                  events:",
        "                    - name: ${8:palletName.EventName}",
        "                      result: ${9}"
      ],
      "description": "Create a new tests suit"
    },
    "Create a Describe section" : {
      "prefix": "describes:",
